// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("guest") // guest, admin
  accounts      Account[]
  sessions      Session[]
  rsvps         RSVP[]
  photos        Photo[]
  songs         Song[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// RSVP Model
model RSVP {
  id          String   @id @default(cuid())
  name        String
  email       String
  attending   Boolean
  guests      Int      @default(0)
  comments    String?  @db.Text
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  guestList   Guest[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("rsvps")
}

// Guest Model - Additional guests for RSVPs
model Guest {
  id        String   @id @default(cuid())
  name      String
  email     String
  rsvpId    String
  rsvp      RSVP     @relation(fields: [rsvpId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("guests")
}

// Tourism Model
model TourismPlace {
  id          String   @id @default(cuid())
  name        String
  type        String   // hotel, restaurant, leisure, culture
  description String   @db.Text
  image       String?
  link        String?
  latitude    Float?
  longitude   Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tourism_places")
}

// Gift Registry Model
model Gift {
  id                   String   @id @default(cuid())
  name                 String
  description          String?  @db.Text
  price                Float?
  image                String?
  link                 String?
  reserved             Boolean  @default(false)
  purchased            Boolean  @default(false)
  reservedBy           String?
  reservedAt           DateTime?
  reservationExpiresAt DateTime?
  receiptUrl           String?
  receiptStatus        String?  @default("pending") // pending, approved, rejected
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("gifts")
}

// Photo Gallery Model
model Photo {
  id          String   @id @default(cuid())
  url         String
  thumbnailUrl String?
  caption     String?  @db.Text
  approved    Boolean  @default(false)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  uploaderName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("photos")
}

// Music Suggestions Model
model Song {
  id          String   @id @default(cuid())
  title       String
  artist      String
  approved    Boolean  @default(false)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  suggestedBy String?
  proposedBy  String?  // "Estelle" o "Alexandre" when added by admin
  spotifyId   String?
  album       String?
  albumArt    String?
  previewUrl  String?
  spotifyUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("songs")
}

// Wedding Information Model - Configurable from admin
model WeddingInfo {
  id                     String   @id @default(cuid())
  // Date and Time
  weddingDate            String
  ceremonyTime           String
  cocktailTime           String
  dinnerPartyTime        String
  // Location
  venueName              String
  venueAddress           String
  venueLink              String?
  venueLatitude          Float?
  venueLongitude         Float?
  // Dress Code
  dressCodeTitle         String
  dressCodeDescription   String   @db.Text
  dressCodeMen           String   @db.Text
  dressCodeWomen         String   @db.Text
  // Weather
  weatherSeason          String
  weatherAvgTemp         String
  weatherDescription     String   @db.Text
  weatherRecommendations String   @db.Text
  // Parking
  parkingAvailable       Boolean  @default(true)
  parkingDescription     String?  @db.Text
  // Accommodation
  accommodationTitle     String?
  accommodationDescription String? @db.Text
  // Additional Information
  giftPolicy             String?  @db.Text
  childrenPolicy         String?  @db.Text
  photographyNote        String?  @db.Text
  scheduleNote           String?  @db.Text
  transportNote          String?  @db.Text
  
  updatedAt              DateTime @updatedAt
  updatedBy              String?

  @@map("wedding_info")
}
