// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("guest") // guest, admin
  accounts      Account[]
  sessions      Session[]
  rsvps         RSVP[]
  photos        Photo[]
  songs         Song[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// RSVP Model
model RSVP {
  id          String   @id @default(cuid())
  name        String
  email       String
  attending   Boolean
  guests      Int      @default(0)
  comments    String?  @db.Text
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("rsvps")
}

// Tourism Model
model TourismPlace {
  id          String   @id @default(cuid())
  name        String
  type        String   // hotel, restaurant, leisure, culture
  description String   @db.Text
  image       String?
  link        String?
  latitude    Float?
  longitude   Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tourism_places")
}

// Gift Registry Model
model Gift {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  price       Float?
  image       String?
  link        String?
  reserved    Boolean  @default(false)
  purchased   Boolean  @default(false)
  reservedBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("gifts")
}

// Photo Gallery Model
model Photo {
  id          String   @id @default(cuid())
  url         String
  thumbnailUrl String?
  caption     String?  @db.Text
  approved    Boolean  @default(false)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  uploaderName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("photos")
}

// Music Suggestions Model
model Song {
  id          String   @id @default(cuid())
  title       String
  artist      String
  approved    Boolean  @default(false)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  suggestedBy String?
  spotifyId   String?
  album       String?
  albumArt    String?
  previewUrl  String?
  spotifyUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("songs")
}
